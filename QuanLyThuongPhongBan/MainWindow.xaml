<Window
    x:Class="QuanLyThuongPhongBan.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="mainWindow"
    Title="Quản Lý Thưởng Phòng Ban"
    Width="1500"
    Height="720"
    DataContext="{StaticResource MainVM}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#e5ffe7">

            <TabControl
                Padding="0"
                HorizontalContentAlignment="Center"
                materialDesign:NavigationRailAssist.SelectionCornerRadius="10"
                materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                TabStripPlacement="Bottom">
                <TabItem
                    Width="130"
                    Height="35"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center">
                    <TabItem.Header>
                        <StackPanel
                            Margin="5,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <!--  Icon bên trái  -->
                            <materialDesign:PackIcon
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="ProjectorScreen" />

                            <!--  Text bên phải  -->
                            <TextBlock VerticalAlignment="Center" Text="Thưởng dự án" />
                        </StackPanel>
                    </TabItem.Header>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding ShowProjectRewardViewCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TabItem>
                <TabItem
                    Width="130"
                    Height="35"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center">
                    <TabItem.Header>
                        <StackPanel
                            Margin="5,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <!--  Icon bên trái  -->
                            <materialDesign:PackIcon
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Kind="TargetAccount" />

                            <!--  Text bên phải  -->
                            <TextBlock VerticalAlignment="Center" Text="Thưởng SMB" />
                        </StackPanel>
                    </TabItem.Header>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding ShowSMBRewardViewCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TabItem>
            </TabControl>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.Background>
                <ImageBrush
                    ImageSource="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRFcoRoOy-EzrJ3MET_RdUYeay0PQ36DBYCNK6pWh18CFyFSEMR"
                    Stretch="UniformToFill"
                    TileMode="Tile"
                    Viewport="0,0,0.3,0.3"
                    ViewportUnits="RelativeToBoundingBox" />
            </Grid.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">

                    <Border CornerRadius="10">
                        <Border.Background>
                            <ImageBrush ImageSource="{x:Null}" Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>

                    <Grid Margin="10,0,10,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <WrapPanel Margin="10,10,0,0">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="25"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    Kind="{Binding Icon, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Text="{Binding Caption}" />
                            </WrapPanel>


                            <Grid
                                Grid.Column="1"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right">

                                <StackPanel Orientation="Horizontal">

                                    <Button
                                        Height="35"
                                        Margin="0,0,10,0"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        materialDesign:RippleAssist.Feedback="White"
                                        Click="ShowPopup_Click"
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Center"
                                                Kind="Bell" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                Text="Thông báo" />
                                        </WrapPanel>
                                    </Button>

                                    <Button
                                        Height="35"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        materialDesign:RippleAssist.Feedback="White"
                                        Command="{Binding LogoutCommand}"
                                        CommandParameter="{Binding ElementName=mainWindow}"
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Center"
                                                Kind="Logout" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Center"
                                                Text="Thoát" />
                                        </WrapPanel>
                                    </Button>
                                </StackPanel>

                                <Popup
                                    x:Name="NotificationPopup"
                                    AllowsTransparency="True"
                                    Placement="Bottom"
                                    StaysOpen="False">
                                    <Border
                                        Margin="20"
                                        Padding="10"
                                        HorizontalAlignment="Stretch"
                                        BorderBrush="Green"
                                        BorderThickness="2"
                                        CornerRadius="8">

                                        <Border.Background>
                                            <ImageBrush ImageSource="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRFcoRoOy-EzrJ3MET_RdUYeay0PQ36DBYCNK6pWh18CFyFSEMR" Stretch="UniformToFill" />
                                        </Border.Background>

                                        <ScrollViewer
                                            Width="600"
                                            MaxHeight="300"
                                            HorizontalScrollBarVisibility="Auto">
                                            <StackPanel Margin="10">
                                                <TextBlock
                                                    Margin="0,0,0,10"
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                    Text="Thông báo!" />

                                                <ItemsControl ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                MinHeight="80"
                                                                Margin="0,5,0,5"
                                                                Padding="10"
                                                                Background="{DynamicResource MaterialDesignPaper}"
                                                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                                BorderThickness="1"
                                                                CornerRadius="8"
                                                                Effect="{DynamicResource MaterialDesignElevation3}">

                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#FFEEEEEE" />
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>

                                                                <StackPanel>

                                                                    <!--  ID tài khoản  -->
                                                                    <TextBlock
                                                                        Margin="0,0,0,2"
                                                                        FontSize="12"
                                                                        Foreground="Gray"
                                                                        Text="{Binding IdTaiKhoan, StringFormat='ID tài khoản: {0}'}" />

                                                                    <!--  Hành động  -->
                                                                    <TextBlock
                                                                        Margin="0,0,0,5"
                                                                        FontSize="12"
                                                                        Foreground="Gray"
                                                                        Text="{Binding HanhDong, StringFormat='Hành động: {0}'}" />

                                                                    <!--  Mô tả  -->
                                                                    <TextBlock
                                                                        Margin="0,0,0,5"
                                                                        FontSize="14"
                                                                        FontWeight="SemiBold"
                                                                        Text="{Binding MoTa}"
                                                                        TextWrapping="Wrap" />

                                                                    <!--  Thời gian  -->
                                                                    <TextBlock
                                                                        FontSize="12"
                                                                        Foreground="Gray"
                                                                        Text="{Binding ThoiGian, StringFormat='Thời gian: {0:dd/MM/yyyy HH:mm}'}" />
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                        </ScrollViewer>
                                    </Border>
                                </Popup>

                            </Grid>
                        </Grid>

                        <ContentControl
                            Grid.Row="1"
                            Margin="10"
                            Content="{Binding CurrentView}" />

                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>