<Window
    x:Class="QuanLyThuongPhongBan.ViewForGauK.View.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="500"
    mc:Ignorable="d"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="CanMinimize"
    Title="Update"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border CornerRadius="10" MouseDown="Title_Window_MouseDown">

        <Grid>

            <Border CornerRadius="10">
                <Border.Background>
                    <!--<ImageBrush ImageSource="G:\My Drive\Loli\119769609_p02.jpg" x:Name="imageBrush" Stretch="UniformToFill" />-->
                    <ImageBrush
                        x:Name="imageBrush"
                        ImageSource="G:\My Drive\Loli\121541665_p03.jpg"
                        Stretch="UniformToFill" />
                </Border.Background>
            </Border>

            <Border
                Background="Black"
                CornerRadius="10"
                Opacity="0.75" />

            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <Button
                    Height="35"
                    VerticalAlignment="Center"
                    Click="Btn_Minimize_Click"
                    DockPanel.Dock="Right"
                    Foreground="White"
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Style="{StaticResource MaterialDesignFlatButton}">                    ⇀
                </Button>

                <Button
                    Height="35"
                    VerticalAlignment="Center"
                    Click="Btn_Close_Click"
                    DockPanel.Dock="Right"
                    Foreground="White"
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Style="{StaticResource MaterialDesignFlatButton}">                    ✘
                </Button>

            </StackPanel>

            <Grid>

                <Image
                    Width="150"
                    Margin="0 0 0 100"
                    Source="/Image/Logo.ico" />

                <StackPanel Margin="0 0 0 65" VerticalAlignment="Bottom">
                    <TextBlock
                        Margin="15"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Name="txtStatus"
                        Text="Đang update..." />
                    <ProgressBar
                        Width="650"
                        Height="5"
                        Value="0"
                        IsIndeterminate="True"
                        Name="progressBar" />
                </StackPanel>
            </Grid>
        </Grid>

    </Border>
</Window>