<Window
    x:Class="QuanLyThuongPhongBan.Views.AddEditSMBRewardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan.CLass"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    Title="AddEditSMBRewardWindow"
    Width="1250"
    Height="620"
    AllowsTransparency="True"
    Background="Transparent"
    DataContext="{StaticResource SMBRewardVM}"
    KeyDown="Window_KeyDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="30"
            CornerRadius="8"
            GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>

    <Border
        Padding="5"
        BorderThickness="1"
        CornerRadius="15">

        <Border.Background>
            <ImageBrush
                ImageSource="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRFcoRoOy-EzrJ3MET_RdUYeay0PQ36DBYCNK6pWh18CFyFSEMR"
                Stretch="UniformToFill"
                TileMode="Tile"
                Viewport="0,0,0.3,0.3"
                ViewportUnits="RelativeToBoundingBox" />
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="20,0,0,0"
                CornerRadius="10,10,0,0">
                <Grid>

                    <DockPanel>

                        <TextBlock
                            x:Name="Title_Window"
                            Width="auto"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="Black"
                            MouseDown="Title_Window_MouseDown"
                            Text="Thưởng SMB" />

                    </DockPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Expander
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Header="1.Tổng SMB"
                        IsExpanded="True">
                        <WrapPanel
                            Margin="24,8,24,16"
                            Orientation="Horizontal"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}">

                            <!--  Tổng giá trị SMB  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongGiaTriSmb, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng giá trị SMB" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tỉ lệ quyết toán  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.XuatHoaDon, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Đã xuất hóa đơn" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tổng tỉ lệ SMB  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="%"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongTiLeThuongSmb, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng tỉ lệ SMB" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tổng giá trị SMB điều chỉnh  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongGiaTriThuongSmb, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng giá trị SMB" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>


                            <!--  Năm thưởng  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.QuyNamThuong, UpdateSourceTrigger=PropertyChanged}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Quý năm thưởng" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                        </WrapPanel>
                    </Expander>

                    <Expander
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Header="2.Tổng quan"
                        IsExpanded="True">
                        <WrapPanel
                            Margin="24,8,24,16"
                            Orientation="Horizontal"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}">

                            <!--  Tổng tỉ lệ GD1 / Doanh thu (%)  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="%"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongTiLeDot1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng tỉ lệ GD1 / Doanh thu (%)" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tổng giá trị GD1 / Doanh thu  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongGiaTriDot1, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng giá trị GD1 / Doanh thu" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tổng thu hồi công nợ  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongThuHoiCongNo, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng thu hồi công nợ" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <!--  Tổng nghiệm thu  -->
                            <TextBox
                                Margin="10,5"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.SuffixText="VND"
                                FontSize="18"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding TbThuongSmb.TongNghiemThu, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Tổng nghiệm thu" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                        </WrapPanel>
                    </Expander>

                    <Expander
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Header="3.Chi tiết SMB"
                        IsExpanded="True">
                        <DataGrid
                            Margin="8"
                            materialDesign:DataGridAssist.CellPadding="8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="10,6"
                            materialDesign:DataGridAssist.EnableEditBoxAssist="True"
                            AlternationCount="2"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="True"
                            HeadersVisibility="Column"
                            IsReadOnly="False"
                            ItemsSource="{Binding TbThuongSmb.Details}"
                            RowHeaderWidth="0"
                            SelectionUnit="FullRow">

                            <!--  Style mặc định: căn trái cho cả cell text và editing box  -->
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                </Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!--  Phòng ban  -->
                                <DataGridTextColumn Binding="{Binding IdPhongBanNavigation.TenPhongBan}" Header="Phòng ban" />

                                <!--  Tỉ lệ thưởng (%)  -->
                                <DataGridTextColumn Binding="{Binding TiLeTongSmb, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:0.#######}}" Header="Tỉ lệ tổng gói (%)" />

                                <!--  Giá trị  -->
                                <DataGridTextColumn Binding="{Binding GiaTriTongSmb, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=N0}" Header="Giá trị tổng gói" />

                                <!--  Điều chỉnh đợt 1  -->
                                <DataGridTextColumn Binding="{Binding TiLeDot1, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:0.#######}}" Header="Tỉ lệ GD1/Doanh thu (%)" />
                                <DataGridTextColumn Binding="{Binding GiaTriDot1, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=N0}" Header="Giá trị GD1/Doanh thu" />

                                <!--  Thu hồi công nợ  -->
                                <DataGridTextColumn Binding="{Binding TiLeThuHoiCongNo, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:0.#######}}" Header="Tỉ lệ Thu hồi công nợ" />
                                <DataGridTextColumn Binding="{Binding ThuHoiCongNo, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=N0}" Header="Thu hồi công nợ" />

                                <!--  Nghiệm thu  -->
                                <DataGridTextColumn Binding="{Binding NghiemThu, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=N0}" Header="Nghiệm thu" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Expander>


                    <Expander
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Header="3.Kho"
                        Visibility="Collapsed">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <WrapPanel
                                Margin="24,8,24,16"
                                Orientation="Horizontal"
                                TextBlock.Foreground="{DynamicResource MaterialDesignBody}" />
                        </ScrollViewer>
                    </Expander>

                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">

                        <Button
                            x:Name="closeButton"
                            Margin="10,0,5,0"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#FF6E6E6E"
                            Click="closeButton_Click"
                            FontSize="15"
                            Foreground="White">
                            <WrapPanel>
                                <materialDesign:PackIcon
                                    Margin="0,2,5,0"
                                    VerticalAlignment="Center"
                                    Kind="Close" />
                                <TextBlock>Đóng</TextBlock>
                            </WrapPanel>
                        </Button>

                        <Button
                            Margin="5,0,5,0"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding CalculatorDataCommand}"
                            FontSize="15"
                            Foreground="White">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="#59a2ff" />
                                    <!--  Xanh lá nhạt  -->
                                    <GradientStop Offset="1" Color="#005fda" />
                                    <!--  Xanh lá đậm  -->
                                </LinearGradientBrush>
                            </Button.Background>
                            <WrapPanel>
                                <materialDesign:PackIcon
                                    Margin="0,2,5,0"
                                    VerticalAlignment="Center"
                                    Kind="Calculator" />
                                <TextBlock>Tính toán</TextBlock>
                            </WrapPanel>
                        </Button>

                        <Button
                            Grid.Column="2"
                            Margin="5,0,10,0"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding AddOrEditRowCommand}"
                            FontSize="15"
                            Foreground="White">
                            <WrapPanel>
                                <materialDesign:PackIcon
                                    Margin="0,2,5,0"
                                    VerticalAlignment="Center"
                                    Kind="ContentSave" />
                                <TextBlock>Lưu</TextBlock>
                            </WrapPanel>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
