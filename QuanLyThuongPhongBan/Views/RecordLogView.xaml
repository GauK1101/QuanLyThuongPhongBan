<UserControl
    x:Class="QuanLyThuongPhongBan.Views.RecordLogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="clr-namespace:QuanLyThuongPhongBan.CLass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource RecordLogVM}">
    <Border
        Background="#f5f5f5"
        CornerRadius="5"
        Padding="5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Grid Margin="10,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                </Button>

                <TextBox
                    Grid.Column="1"
                    Width="auto"
                    MinWidth="200"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm..."
                    Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>

            <ScrollViewer
                Grid.Row="1"
                Background="{DynamicResource MaterialDesignPaper}"
                Foreground="{DynamicResource MaterialDesignBody}"
                HorizontalScrollBarVisibility="Disabled"
                Padding="10"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding List}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,10"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="1"
                                CornerRadius="8"
                                materialDesign:ElevationAssist.Elevation="Dp12"
                                Padding="15">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                                        Text="{Binding HanhDong}" />

                                    <TextBlock
                                        Margin="0,2,0,5"
                                        FontSize="12"
                                        Foreground="{DynamicResource MaterialDesignBodyLight}"
                                        Text="{Binding ThoiGian, StringFormat='{}{0:HH:mm dd/MM/yyyy}'}" />

                                    <TextBlock
                                        Foreground="{DynamicResource MaterialDesignBody}"
                                        Text="{Binding MoTa}"
                                        TextWrapping="Wrap" />

                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="12"
                                        FontStyle="Italic"
                                        Foreground="{DynamicResource MaterialDesignBodyLight}"
                                        Text="{Binding IdTaiKhoan, StringFormat='Người thực hiện: {0}'}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding PreviousPageCommand}"
                    FontSize="15"
                    Foreground="White"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    IsEnabled="{Binding CanGoPrevious}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}">
                    <WrapPanel>
                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
                    </WrapPanel>
                </Button>

                <TextBlock VerticalAlignment="Center" Text="{Binding CurrentPage}" />

                <Button
                    Margin="10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding NextPageCommand}"
                    FontSize="15"
                    Foreground="White"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}">
                    <WrapPanel>
                        <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
                    </WrapPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>