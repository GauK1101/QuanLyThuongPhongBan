<UserControl x:Class="QuanLyThuongPhongBan.Views.SMBRewardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyThuongPhongBan.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid Margin="10 5 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>


            <Button Style="{DynamicResource MaterialDesignToolButton}">
                <materialDesign:PackIcon Kind="Search" Opacity=".56" />
            </Button>

            <TextBox
                Grid.Column="1"
                Width="auto"
                MinWidth="200"
                Margin="8 0 0 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Tìm kiếm..."
                Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Grid.Column="2"
                Margin="10 0"
                HorizontalAlignment="Right"
                Command="{Binding ShowAddOrEditRowCommand}"
                FontSize="15"
                Foreground="White"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignFlatMidBgButton}">
                <WrapPanel>
                    <materialDesign:PackIcon
                        Margin="0 2 5 0"
                        VerticalAlignment="Center"
                        Kind="Add" />
                    <TextBlock>Thêm mới</TextBlock>
                </WrapPanel>
            </Button>
        </Grid>

        <DataGrid
            x:Name="myDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserAddRows="False"
            CanUserResizeColumns="True"
            ColumnReordered="DataGrid_ColumnReordered"
            FrozenColumnCount="3"
            ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Hành động">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="0 0 5 0"
                                    Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Sửa"
                                    Foreground="White"
                                    materialDesign:ButtonAssist.CornerRadius="6" />
                                <Button
                                    Background="Red"
                                    BorderBrush="Red"
                                    Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Xoá"
                                    Foreground="White"
                                    materialDesign:ButtonAssist.CornerRadius="6" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding nam}" Header="Năm" />
                <DataGridTextColumn Binding="{Binding nam}" Header="Hợp Đồng" />
                <DataGridTextColumn Binding="{Binding nam}" Header="Quyết Toán" />
                <DataGridTextColumn Binding="{Binding nam}" Header="Tổng Tỉ Lệ" />
                <DataGridTextColumn Binding="{Binding nam}" Header="Tổng Giá Trị" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding PreviousPageCommand}"
                Foreground="{DynamicResource PrimaryHueDarkBrush}"
                materialDesign:ButtonAssist.CornerRadius="6"
                materialDesign:RippleAssist.Feedback="White"
                Style="{StaticResource MaterialDesignFlatButton}">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
            </Button>

            <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center"/>

            <Button
                Command="{Binding NextPageCommand}"
                Foreground="{DynamicResource PrimaryHueDarkBrush}"
                materialDesign:ButtonAssist.CornerRadius="6"
                materialDesign:RippleAssist.Feedback="White"
                Style="{StaticResource MaterialDesignFlatButton}">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
