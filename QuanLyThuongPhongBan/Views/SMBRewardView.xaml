<UserControl x:Class="QuanLyThuongPhongBan.Views.SMBRewardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyThuongPhongBan"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:class="clr-namespace:QuanLyThuongPhongBan.CLass"
             mc:Ignorable="d"
             DataContext="{StaticResource SMBRewardVM}"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <class:CurrencyConverter x:Key="CurrencyConverter"/>
    </UserControl.Resources>

    <Border
        Padding="5"
        Background="#f5f5f5"
        CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Grid Margin="10 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                </Button>

                <TextBox
                    Grid.Column="1"
                    Width="auto"
                    MinWidth="200"
                    Margin="8 0 0 0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm..."
                    Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    >

                    <Button
                        Margin="0 0 10 0"
                        VerticalAlignment="Center"
                        Command="{Binding ReloadDataCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Tải lại trang"
                        >
                        <materialDesign:PackIcon
                            Kind="Reload"
                            />
                    </Button>

                    <!-- Checkbox để mở/tắt toàn bộ expand -->
                    <ToggleButton
                        x:Name="chkExpandAll"
                        Checked="chkExpandAll_Checked"
                        Unchecked="chkExpandAll_Unchecked"
                        Width="60"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="Ẩn/Hiện chi tiết các cột"
                        >
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground
                            >
                            <SolidColorBrush
                                Color="Purple" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground
                            >
                            <SolidColorBrush
                                Color="Gray" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <Button
                        Margin="10 0"
                        HorizontalAlignment="Right"
                        Command="{Binding ShowAddOrEditRowCommand}"
                        FontSize="15"
                        Foreground="White"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                        <WrapPanel>
                            <materialDesign:PackIcon
                                Margin="0 2 5 0"
                                VerticalAlignment="Center"
                                Kind="Add" />
                            <TextBlock>Thêm mới</TextBlock>
                        </WrapPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <DataGrid
                x:Name="myDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="Transparent"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                ColumnReordered="DataGrid_ColumnReordered"
                FrozenColumnCount="1"
                IsReadOnly="True"
                ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Hành động">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Margin="2 0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon
                                                VerticalAlignment="Center"
                                                Kind="Edit" />
                                        </WrapPanel>
                                    </Button>
                                    <Button
                                        Margin="2 0"
                                        Background="Red"
                                        BorderBrush="Red"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon
                                                VerticalAlignment="Center"
                                                Kind="Delete" />
                                        </WrapPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding NamThuong}" Header="Năm" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriSmb, Converter={StaticResource CurrencyConverter}}" Header="Hợp Đồng" />
                    <DataGridTextColumn Binding="{Binding XuatHoaDon, Converter={StaticResource CurrencyConverter}}" Header="Quyết Toán" />
                    <DataGridTextColumn Binding="{Binding TongTiLeThuongSmb, StringFormat={}{0:0.#####}%}" Header="Tổng Tỉ Lệ" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriThuongSmb, Converter={StaticResource CurrencyConverter}}" Header="Tổng Giá Trị" />
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <DataGrid ItemsSource="{Binding Details}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  Margin="20,5,5,5"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Phòng ban"
                                                    Binding="{Binding IdPhongBanNavigation.TenPhongBan}" />

                                <DataGridTextColumn Header="Tỉ lệ SMB"
                                                    Binding="{Binding TiLeTongSmb, StringFormat={}{0:0.#####}%}" />

                                <DataGridTextColumn Header="Tỉ lệ giá trị"
                                                    Binding="{Binding GiaTriTongSmb, StringFormat={}{0:0.#####}%}" />

                                <DataGridTextColumn Header="Tỉ lệ GD1"
                                                    Binding="{Binding TiLeDot1, StringFormat={}{0:0.#####}%}" />

                                <DataGridTextColumn Header="Giá trị GD1"
                                                    Binding="{Binding GiaTriDot1, Converter={StaticResource CurrencyConverter}}" />

                                <DataGridTextColumn Header="Thu hồi công nợ"
                                                    Binding="{Binding ThuHoiCongNo, Converter={StaticResource CurrencyConverter}}" />

                                <DataGridTextColumn Header="Nghiệm thu"
                                                    Binding="{Binding NghiemThu, Converter={StaticResource CurrencyConverter}}" />
                            </DataGrid.Columns>

                        </DataGrid>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Command="{Binding PreviousPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
                </Button>

                <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center"/>

                <Button
                    Command="{Binding NextPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>