<UserControl
    x:Class="QuanLyThuongPhongBan.Views.ProjectRewardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="clr-namespace:QuanLyThuongPhongBan.CLass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource ProjectRewardVM}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <class:CurrencyConverter x:Key="CurrencyConverter" />
    </UserControl.Resources>

    <Border
        Padding="5"
        Background="#f5f5f5"
        CornerRadius="5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Margin="10,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                </Button>

                <TextBox
                    Grid.Column="1"
                    Width="auto"
                    MinWidth="200"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm..."
                    Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Command="{Binding ReloadDataCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Tải lại trang">
                        <materialDesign:PackIcon Kind="Reload" />
                    </Button>

                    <!--  Checkbox để mở/tắt toàn bộ expand  -->
                    <ToggleButton
                        x:Name="chkExpandAll"
                        Width="60"
                        Checked="chkExpandAll_Checked"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="Ẩn/Hiện chi tiết các cột"
                        Unchecked="chkExpandAll_Unchecked">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Purple" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Gray" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <Button
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding ShowAddOrEditRowCommand}"
                        FontSize="15"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                        <WrapPanel>
                            <materialDesign:PackIcon
                                Margin="0,2,5,0"
                                VerticalAlignment="Center"
                                Kind="Add" />
                            <TextBlock>Thêm mới</TextBlock>
                        </WrapPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <DataGrid
                x:Name="myDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="Transparent"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                ColumnReordered="DataGrid_ColumnReordered"
                FrozenColumnCount="2"
                IsReadOnly="True"
                ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Hành động">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Margin="2,0"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Edit" />
                                        </WrapPanel>
                                    </Button>
                                    <Button
                                        Margin="2,0"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Background="Red"
                                        BorderBrush="Red"
                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Delete" />
                                        </WrapPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding NamThuong, UpdateSourceTrigger=PropertyChanged}" Header="Năm" />
                    <DataGridTextColumn Binding="{Binding GiaTriHopDong, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Hợp Đồng" />
                    <DataGridTextColumn Binding="{Binding QuyetToan, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Quyết Toán" />
                    <DataGridTextColumn Binding="{Binding TongTiLeThuongDuAn, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng Tỉ Lệ" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriThuongDuAn, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng Giá Trị" />

                    <DataGridTextColumn Binding="{Binding TongTiLeDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng tỉ lệ GD1 trúng thầu (%)" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng giá trị GD2 triển khai" />

                    <DataGridTextColumn Binding="{Binding TongTiLeDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng tỉ lệ GD2 trúng thầu (%)" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng giá trị GD2 triển khai" />

                    <DataGridTextColumn Binding="{Binding TongThuHoiCongNo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng thu hồi công nợ" />

                    <DataGridTextColumn Binding="{Binding TongNghiemThu, Converter={StaticResource CurrencyConverter}}" Header="Tổng nghiệm thu" />
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <DataGrid
                            Margin="20,5,5,5"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            HeadersVisibility="Column"
                            IsReadOnly="True"
                            ItemsSource="{Binding Details}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding IdPhongBanNavigation.TenPhongBan, UpdateSourceTrigger=PropertyChanged}" Header="Phòng ban" />
                                <DataGridTextColumn Binding="{Binding TiLeTongGoi, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tỉ lệ tổng thưởng" />
                                <DataGridTextColumn Binding="{Binding GiaTriTongGoi, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Giá trị tổng gói" />
                                <DataGridTextColumn Binding="{Binding TiLeDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tỉ lệ GD1 trúng thầu" />
                                <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD1 trúng thầu" />
                                <DataGridTextColumn Binding="{Binding TiLeDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tỉ lệ GD2 triển khai" />
                                <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD2 triển khai" />
                                <DataGridTextColumn Binding="{Binding ThuHoiCongNo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Thu hồi công nợ" />
                                <DataGridTextColumn Binding="{Binding NghiemThu, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng cộng" />

                            </DataGrid.Columns>
                        </DataGrid>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Visibility="Hidden">
                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding PreviousPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
                </Button>

                <TextBlock VerticalAlignment="Center" Text="{Binding CurrentPage}" />

                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding NextPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
