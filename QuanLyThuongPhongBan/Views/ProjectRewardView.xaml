<UserControl
    x:Class="QuanLyThuongPhongBan.Views.ProjectRewardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="clr-namespace:QuanLyThuongPhongBan.CLass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource ProjectRewardVM}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <class:CurrencyConverter x:Key="CurrencyConverter" />
    </UserControl.Resources>

    <Border
        Padding="5"
        Background="#f5f5f5"
        CornerRadius="5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Margin="10,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                </Button>

                <TextBox
                    Grid.Column="1"
                    Width="auto"
                    MinWidth="200"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm..."
                    Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Command="{Binding ReloadDataCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Tải lại trang">
                        <materialDesign:PackIcon Kind="Reload" />
                    </Button>

                    <!--  Checkbox để mở/tắt toàn bộ expand  -->
                    <ToggleButton
                        x:Name="chkExpandAll"
                        Width="60"
                        Checked="chkExpandAll_Checked"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="Ẩn/Hiện chi tiết các cột"
                        Unchecked="chkExpandAll_Unchecked">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Purple" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Gray" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <Button
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding ShowAddOrEditRowCommand}"
                        FontSize="15"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                        <WrapPanel>
                            <materialDesign:PackIcon
                                Margin="0,2,5,0"
                                VerticalAlignment="Center"
                                Kind="Add" />
                            <TextBlock>Thêm mới</TextBlock>
                        </WrapPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <DataGrid
                x:Name="myDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="Transparent"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                ColumnReordered="DataGrid_ColumnReordered"
                FrozenColumnCount="2"
                IsReadOnly="True"
                ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}"
                MouseLeftButtonUp="myDataGrid_MouseLeftButtonUp"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Hành động">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Margin="2,0"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Edit" />
                                        </WrapPanel>
                                    </Button>
                                    <Button
                                        Margin="2,0"
                                        HorizontalAlignment="Right"
                                        materialDesign:ButtonAssist.CornerRadius="6"
                                        Background="Red"
                                        BorderBrush="Red"
                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        FontSize="15"
                                        Foreground="White"
                                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                        <WrapPanel>
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Delete" />
                                        </WrapPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding NamThuong, UpdateSourceTrigger=PropertyChanged}" Header="Năm" />
                    <DataGridTextColumn Binding="{Binding GiaTriHopDong, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Hợp Đồng" />
                    <DataGridTextColumn Binding="{Binding QuyetToan, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Quyết Toán" />
                    <DataGridTextColumn Binding="{Binding TongTiLeThuongDuAn, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng Tỉ Lệ" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriThuongDuAn, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng Giá Trị" />

                    <DataGridTextColumn Binding="{Binding TongTiLeDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng tỉ lệ GD1 trúng thầu (%)" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng giá trị GD2 triển khai" />

                    <DataGridTextColumn Binding="{Binding TongTiLeDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}" Header="Tổng tỉ lệ GD2 trúng thầu (%)" />
                    <DataGridTextColumn Binding="{Binding TongGiaTriDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng giá trị GD2 triển khai" />

                    <DataGridTextColumn Binding="{Binding TongThuHoiCongNo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}" Header="Tổng thu hồi công nợ" />

                    <DataGridTextColumn Binding="{Binding TongNghiemThu, Converter={StaticResource CurrencyConverter}}" Header="Tổng nghiệm thu" />
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <StackPanel Margin="20,5,5,5">

                            <!-- DataGrid tầng 2 (bảng chi tiết chính) -->
                            <TextBlock Text="Chi tiết thưởng theo phòng ban"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5" />
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="Column"
                                IsReadOnly="True"
                                ItemsSource="{Binding TbThuongDaiDoanDuAns}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding IdPhongBanNavigation.TenPhongBan}" Header="Phòng ban" />
                                    <DataGridTextColumn Binding="{Binding TiLeTongGoi, StringFormat={}{0:0.#####}%}" Header="Tỉ lệ tổng thưởng" />
                                    <DataGridTextColumn Binding="{Binding GiaTriTongGoi, Converter={StaticResource CurrencyConverter}}" Header="Giá trị tổng gói" />
                                    <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot1, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD1" />
                                    <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot2, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD2" />
                                    <DataGridTextColumn Binding="{Binding ThuHoiCongNo, Converter={StaticResource CurrencyConverter}}" Header="Thu hồi công nợ" />
                                    <DataGridTextColumn Binding="{Binding NghiemThu, Converter={StaticResource CurrencyConverter}}" Header="Tổng cộng" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- DataGrid tầng 2 khác (bằng cấp, nằm riêng biệt) -->
                            <TextBlock Text="Chi tiết khác (ví dụ tổng hợp nhân viên)"
                                       FontWeight="Bold"
                                       Margin="0,10,0,5" />
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="Column"
                                IsReadOnly="True"
                                ItemsSource="{Binding TbThuongDuAnChiTiets}">
                                <DataGrid.Columns>
                                    <!-- Thông tin cơ bản -->
                                    <DataGridTextColumn Binding="{Binding ChuDauTu}" Header="Chủ đầu tư" />
                                    <DataGridTextColumn Binding="{Binding HopDongSo}" Header="Hợp đồng số" />
                                    <DataGridTextColumn Binding="{Binding DuAn}" Header="Dự án" />

                                    <!-- Ngày tháng -->
                                    <DataGridTextColumn Binding="{Binding NgayThang}" Header="Ngày tháng" />

                                    <!-- Doanh thu -->
                                    <DataGridTextColumn Binding="{Binding DoanhThuHopDong, StringFormat={}{0:N0}}" Header="Doanh thu HĐ" />
                                    <DataGridTextColumn Binding="{Binding DoanhThuQuyetToan, StringFormat={}{0:N0}}" Header="Doanh thu QT" />
                                    <DataGridTextColumn Binding="{Binding DoanhThuDaXuatHoaDon, StringFormat={}{0:N0}}" Header="Đã xuất HĐ" />
                                    <DataGridTextColumn Binding="{Binding DoanhThuChuaXuatHoaDon, StringFormat={}{0:N0}}" Header="Chưa xuất HĐ" />
                                    <DataGridTextColumn Binding="{Binding DaThanhToan, StringFormat={}{0:N0}}" Header="Đã thanh toán" />

                                    <!-- Ghi chú -->
                                    <DataGridTextColumn Binding="{Binding GhiChu}" Header="Ghi chú" />

                                    <!-- Các tỷ lệ -->
                                    <DataGridTextColumn Binding="{Binding Tvgp, StringFormat={}{0:0.#####}%}" Header="TVGP" />
                                    <DataGridTextColumn Binding="{Binding Hsda, StringFormat={}{0:0.#####}%}" Header="HSDA" />
                                    <DataGridTextColumn Binding="{Binding Po, StringFormat={}{0:0.#####}%}" Header="PO" />
                                    <DataGridTextColumn Binding="{Binding Ktk, StringFormat={}{0:0.#####}%}" Header="KTK" />
                                    <DataGridTextColumn Binding="{Binding Ttdvkt, StringFormat={}{0:0.#####}%}" Header="TTDVKT" />
                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

            </DataGrid>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Visibility="Hidden">
                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding PreviousPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
                </Button>

                <TextBlock VerticalAlignment="Center" Text="{Binding CurrentPage}" />

                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding NextPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
