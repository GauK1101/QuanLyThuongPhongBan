<UserControl
    x:Class="QuanLyThuongPhongBan.Views.ProjectRewardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="clr-namespace:QuanLyThuongPhongBan.CLass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyThuongPhongBan"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource ProjectRewardVM}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <class:CurrencyConverter x:Key="CurrencyConverter" />
    </UserControl.Resources>

    <Border
        Padding="5"
        Background="#f5f5f5"
        CornerRadius="5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Margin="10,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                </Button>

                <TextBox
                    Grid.Column="1"
                    Width="auto"
                    MinWidth="200"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm..."
                    Text="{Binding SearchFill, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Command="{Binding ReloadDataCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Tải lại trang">
                        <materialDesign:PackIcon Kind="Reload" />
                    </Button>

                    <!--  Checkbox để mở/tắt toàn bộ expand  -->
                    <ToggleButton
                        x:Name="chkExpandAll"
                        Width="60"
                        Checked="chkExpandAll_Checked"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="Ẩn/Hiện chi tiết các cột"
                        Unchecked="chkExpandAll_Unchecked">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="Purple" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="Gray" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </ToggleButton>

                    <Button
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding ShowAddOrEditRowCommand}"
                        FontSize="15"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}">
                        <WrapPanel>
                            <materialDesign:PackIcon
                                Margin="0,2,5,0"
                                VerticalAlignment="Center"
                                Kind="Add" />
                            <TextBlock>Thêm mới</TextBlock>
                        </WrapPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Grid.Row="1">
                <DataGrid
                    x:Name="myDataGrid"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    CanUserAddRows="False"
                    CanUserResizeColumns="True"
                    ColumnReordered="DataGrid_ColumnReordered"
                    FrozenColumnCount="2"
                    IsReadOnly="True"
                    ItemsSource="{Binding List, UpdateSourceTrigger=PropertyChanged}"
                    RowDetailsVisibilityMode="Collapsed"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    VirtualizingStackPanel.VirtualizationMode="Recycling">

                    <DataGrid.Columns>

                        <DataGridTemplateColumn Header="Hành động" Visibility="Collapsed">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center">
                                        <ToggleButton
                                            Height="30"
                                            materialDesign:ButtonAssist.CornerRadius="5"
                                            Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                            materialDesign:RippleAssist.IsCentered="True"
                                            x:Name="MenuToggle">
                                            <materialDesign:PackIcon Kind="DotsVertical" Width="18" Height="18" />
                                        </ToggleButton>

                                        <!-- Popup menu -->
                                        <Popup
                                            PlacementTarget="{Binding ElementName=MenuToggle}"
                                            Placement="Bottom"
                                            StaysOpen="False"
                                            AllowsTransparency="True"
                                            PopupAnimation="Slide"
                                            IsOpen="{Binding IsChecked, ElementName=MenuToggle, Mode=TwoWay}">
                                            <Border
                                                Background="{DynamicResource MaterialDesignPaper}"
                                                CornerRadius="6"
                                                Padding="4"
                                                SnapsToDevicePixels="True"
                                                Effect="{DynamicResource MaterialDesignElevation2}">
                                                <StackPanel>
                                                    <Button
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Pencil" Width="16" Margin="0,0,4,0"/>
                                                            <TextBlock Text="Sửa"/>
                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="Red"
                                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Delete" Width="16" Margin="0,0,4,0" Foreground="Red"/>
                                                            <TextBlock Text="Xóa"/>
                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="Green"
                                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Click="BtnDetails_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Eye" Width="16" Margin="0,0,4,0" Foreground="Red"/>
                                                            <TextBlock Text="Xem"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </Popup>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Hành động">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Margin="2,0"
                                            HorizontalAlignment="Right"
                                            materialDesign:ButtonAssist.CornerRadius="6"
                                            Command="{Binding DataContext.ShowAddOrEditRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                            <WrapPanel>
                                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Edit" Width="18" Height="18" />
                                            </WrapPanel>
                                        </Button>
                                        <Button
                                            Margin="2,0"
                                            HorizontalAlignment="Right"
                                            materialDesign:ButtonAssist.CornerRadius="6"
                                            Background="Red"
                                            BorderBrush="Red"
                                            Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                            <WrapPanel>
                                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Delete" Width="18" Height="18" />
                                            </WrapPanel>
                                        </Button>
                                        <Button
                                            Margin="2,0"
                                            HorizontalAlignment="Right"
                                            materialDesign:ButtonAssist.CornerRadius="6"
                                            Background="Green"
                                            BorderBrush="Green"
                                            Foreground="White"
                                            Click="BtnDetails_Click"
                                            Style="{StaticResource MaterialDesignFlatMidBgButton}">
                                            <WrapPanel>
                                                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Eye" Width="18" Height="18" />
                                            </WrapPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Năm -->
                        <DataGridTextColumn Header="Năm"
                                            Binding="{Binding NamThuong, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Hợp đồng -->
                        <DataGridTextColumn Header="Hợp Đồng"
                                            Binding="{Binding GiaTriHopDong, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Quyết toán -->
                        <DataGridTextColumn Header="Quyết Toán"
                                            Binding="{Binding QuyetToan, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Tổng tỉ lệ -->
                        <DataGridTextColumn Header="Tổng Tỉ Lệ"
                                            Binding="{Binding TongTiLeThuongDuAn, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Tổng giá trị -->
                        <DataGridTextColumn Header="Tổng Giá Trị"
                                            Binding="{Binding TongGiaTriThuongDuAn, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- GD1 -->
                        <DataGridTextColumn Header="Tổng tỉ lệ GD1 trúng thầu (%)"
                                            Binding="{Binding TongTiLeDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tổng giá trị GD1 triển khai"
                                            Binding="{Binding TongGiaTriDieuChinhDot1, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- GD2 -->
                        <DataGridTextColumn Header="Tổng tỉ lệ GD2 trúng thầu (%)"
                                            Binding="{Binding TongTiLeDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.#####}%}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tổng giá trị GD2 triển khai"
                                            Binding="{Binding TongGiaTriDieuChinhDot2, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Công nợ -->
                        <DataGridTextColumn Header="Tổng thu hồi công nợ"
                                            Binding="{Binding TongThuHoiCongNo, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Nghiệm thu -->
                        <DataGridTextColumn Header="Tổng nghiệm thu"
                                            Binding="{Binding TongNghiemThu, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyConverter}}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <StackPanel Margin="20,5,5,5">

                                <!-- DataGrid tầng 2 (bảng chi tiết chính) -->
                                <TextBlock Text="Chi tiết thưởng theo phòng ban"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5" />
                                <DataGrid
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    HeadersVisibility="Column"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding TbThuongDaiDoanDuAns}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding IdPhongBanNavigation.TenPhongBan}" Header="Phòng ban" />
                                        <DataGridTextColumn Binding="{Binding TiLeTongGoi, StringFormat={}{0:0.#####}%}" Header="Tỉ lệ tổng thưởng" />
                                        <DataGridTextColumn Binding="{Binding GiaTriTongGoi, Converter={StaticResource CurrencyConverter}}" Header="Giá trị tổng gói" />
                                        <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot1, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD1" />
                                        <DataGridTextColumn Binding="{Binding GiaTriDieuChinhDot2, Converter={StaticResource CurrencyConverter}}" Header="Giá trị GD2" />
                                        <DataGridTextColumn Binding="{Binding ThuHoiCongNo, Converter={StaticResource CurrencyConverter}}" Header="Thu hồi công nợ" />
                                        <DataGridTextColumn Binding="{Binding NghiemThu, Converter={StaticResource CurrencyConverter}}" Header="Tổng cộng" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- DataGrid tầng 2 khác (bằng cấp, nằm riêng biệt) -->
                                <TextBlock Text="Chi tiết khác (ví dụ tổng hợp nhân viên)"
                                           FontWeight="Bold"
                                           Margin="0,10,0,5" />
                                <DataGrid
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    HeadersVisibility="Column"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding TbThuongDuAnChiTiets}">
                                    <DataGrid.Columns>
                                        <!-- Thông tin cơ bản -->
                                        <DataGridTextColumn Binding="{Binding ChuDauTu}" Header="Chủ đầu tư" />
                                        <DataGridTextColumn Binding="{Binding HopDongSo}" Header="Hợp đồng số" />
                                        <DataGridTextColumn Binding="{Binding DuAn}" Header="Dự án" />

                                        <!-- Ngày tháng -->
                                        <DataGridTextColumn Binding="{Binding NgayThang}" Header="Ngày tháng" />

                                        <!-- Doanh thu -->
                                        <DataGridTextColumn Binding="{Binding DoanhThuHopDong, Converter={StaticResource CurrencyConverter}}" Header="Doanh thu HĐ" />
                                        <DataGridTextColumn Binding="{Binding DoanhThuQuyetToan, Converter={StaticResource CurrencyConverter}}" Header="Doanh thu QT" />
                                        <DataGridTextColumn Binding="{Binding DoanhThuDaXuatHoaDon, Converter={StaticResource CurrencyConverter}}" Header="Đã xuất HĐ" />
                                        <DataGridTextColumn Binding="{Binding DoanhThuChuaXuatHoaDon, Converter={StaticResource CurrencyConverter}}" Header="Chưa xuất HĐ" />
                                        <DataGridTextColumn Binding="{Binding DaThanhToan, Converter={StaticResource CurrencyConverter}}" Header="Đã thanh toán" />
                                        <DataGridTextColumn Binding="{Binding ChuaThanhToan, Converter={StaticResource CurrencyConverter}}" Header="Chưa thanh toán" />

                                        <!-- Ghi chú -->
                                        <DataGridTextColumn Binding="{Binding GhiChu}" Header="Ghi chú" />

                                        <!-- Các tỷ lệ -->
                                        <DataGridTextColumn Binding="{Binding Tvgp, Converter={StaticResource CurrencyConverter}}" Header="TVGP" />
                                        <DataGridTextColumn Binding="{Binding Hsda, Converter={StaticResource CurrencyConverter}}" Header="HSDA" />
                                        <DataGridTextColumn Binding="{Binding Po, Converter={StaticResource CurrencyConverter}}" Header="PO" />
                                        <DataGridTextColumn Binding="{Binding Ktk, Converter={StaticResource CurrencyConverter}}" Header="KTK" />
                                        <DataGridTextColumn Binding="{Binding Ttdvkt, Converter={StaticResource CurrencyConverter}}" Header="TTDVKT" />
                                    </DataGrid.Columns>
                                </DataGrid>

                            </StackPanel>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>

                </DataGrid>
            </ScrollViewer>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Visibility="Hidden">
                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding PreviousPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowLeft" />
                </Button>

                <TextBlock VerticalAlignment="Center" Text="{Binding CurrentPage}" />

                <Button
                    materialDesign:ButtonAssist.CornerRadius="6"
                    materialDesign:RippleAssist.Feedback="White"
                    Command="{Binding NextPageCommand}"
                    Foreground="{DynamicResource PrimaryHueDarkBrush}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowRight" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
