<Window x:Class="QuanLyThuongPhongBan.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyThuongPhongBan.Views" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Login"
        DataContext="{StaticResource LoginVM}"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{x:Null}"
        Name="loginWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=txtUsername}"
        Height="500" Width="350">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoginCheckCommand}"
                                   CommandParameter="{Binding ElementName=chkRemember}"/>
            <i:InvokeCommandAction Command="{Binding LoginCommand}"
                                   CommandParameter="{Binding ElementName=loginWindow}"
                                   IsEnabled="{Binding IsFirstLaunch}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border
        BorderThickness="1"
        CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0.3" EndPoint="0.5,1">
                <!-- Xanh lá đậm ở trên -->
                <GradientStop Color="#FF183119" Offset="0.0" />
                <!-- Xanh lá trung bình -->
                <GradientStop Color="#FF009933" Offset="0.5" />
                <!-- Xanh lá sáng nhạt hơn ở dưới -->
                <GradientStop Color="#FF009933" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0">

                <!--ControlBar-->
                <Border CornerRadius="14,14,0,0">
                    <Grid>

                        <DockPanel>

                            <Button
                                Height="35"
                                VerticalAlignment="Center"
                                Click="Btn_Close_Click"
                                DockPanel.Dock="Right"
                                Foreground="White"
                                materialDesign:ButtonAssist.CornerRadius="0 14 0 0"
                                Style="{StaticResource MaterialDesignFlatButton}">✘
                            </Button>

                            <Button
                                Height="35"
                                VerticalAlignment="Center"
                                Click="Btn_Minimize_Click"
                                DockPanel.Dock="Right"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignFlatButton}">⇀
                            </Button>

                            <TextBlock
                                Margin="10 0"
                                Width="auto"
                                MouseDown="Title_Window_MouseDown"
                                Foreground="White"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="KTD" />

                        </DockPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <Border Grid.Row="1">
                <Border.Background>
                    <ImageBrush ImageSource="{x:Null}" Stretch="Uniform" />
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="150" />
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <Image
                        Height="100"
                        Margin="0 30 0 0"
                        Source="https://ktd.vn/wp-content/uploads/2025/08/logo_ktd.png" />

                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <TextBox
                            x:Name="txtUsername"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                            Width="250"
                            Margin="0 10"
                            FontSize="18"
                            Foreground="White"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Tên đăng nhập"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.UnderlineBrush="White"
                            materialDesign:TextFieldAssist.LeadingIcon="Account"/>

                        <PasswordBox
                            x:Name="FloatingPasswordBox"
                            Width="250"
                            Margin="0 10"
                            FontSize="18"
                            VerticalAlignment="Center"
                            Foreground="White"
                            materialDesign:HintAssist.Hint="Mật khẩu"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.UnderlineBrush="White"
                            materialDesign:TextFieldAssist.LeadingIcon="Key" >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PasswordChanged">
                                    <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                           CommandParameter="{Binding ElementName=FloatingPasswordBox}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>

                        <CheckBox
                            x:Name="chkRemember"
                            Width="250"
                            Content="Tự động đăng nhập"
                            Foreground="White"
                            Background="White"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Left"
                            materialDesign:CheckBoxAssist.CheckBoxSize="20"
                            FontSize="11"
                            Margin="0 5"
                            Padding="4,0,0,0"
                            IsChecked="{Binding IsLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding LoginCheckCommand}"
                            CommandParameter="{Binding ElementName=chkRemember}"
                            Style="{StaticResource MaterialDesignCheckBox}"
                            />

                    </StackPanel>

                    <StackPanel Grid.Row="3" VerticalAlignment="Center">

                        <Button
                            Grid.Row="3"
                            Width="250"
                            Height="35"
                            Margin="0 10"
                            Background="Green"
                            BorderBrush="Green"
                            Content="ĐĂNG NHẬP"
                            FontSize="18"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=loginWindow}"
                            Foreground="White"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            IsDefault="True"
                            Style="{StaticResource MaterialDesignFlatMidBgButton}" />

                    </StackPanel>

                    <TextBlock
                        x:Name="TxtVersion"
                        Grid.Row="4"
                        Margin="20 0"
                        Foreground="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="14"/>
                </Grid>
            </Border>


        </Grid>

    </Border>
</Window>
